<Window x:Class="FaladorTradingSystems.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaladorTradingSystems"
        mc:Ignorable="d"
        Title="Falador Capital Management" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height ="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <local:LineChartPanel x:Name="ChartPanelAssetPrice" Grid.Column="1" Grid.Row="1"
                                Grid.ColumnSpan="3" Margin = "3,3,3,3">
            
        </local:LineChartPanel>

        <Grid Grid.Column = "0" Grid.Row="0"
              Grid.ColumnSpan="3" Name="GridMainMenu">
            
        </Grid>

    </Grid>
</Window>
